{% extends 'base.html.twig' %}

{% block body %}
  <div class="container">
    <form action="{{ path('app_admin_user') }}" method="POST">
      <table class="table table-dark">
        {% for user in data %}
          <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.email }}</td>
            <td>
              <select name="role">
                {% for role in user.roles %}
                  <option value="{{ role }}">{{ role }}</option>
                {% endfor %}
              </select>
            </td>
          </tr>
        {% endfor %}
      </table>
      <button class="btn btn-secondary" type="submit">ENVIAR</button>
    </form>
  </div>
{% endblock %}
